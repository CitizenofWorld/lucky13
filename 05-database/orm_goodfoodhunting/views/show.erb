<h1><%= @dish.name %></h1>

<img src="<%= @dish.image_url %>" alt="">

<% if logged_in? %>
<form action="/comments" method="post">
  <input type="hidden" name="dish_id" value="<%= @dish.id %>">
  <textarea name="body"></textarea>
  <button>post</button>
</form>
<% end %>

<% @comments.each do |comment| %>
  <p><%= comment.body %></p>
  <div><%= comment.user.email if comment.user %></div>
<% end %>